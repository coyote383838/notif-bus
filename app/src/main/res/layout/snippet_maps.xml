	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
        <TextView android:id="@+id/SnippetLine0"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine1"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine2"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine3"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine4"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine5"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	</LinearLayout>
     
    <LinearLayout 
        android:id="@+id/layoutSnippet2" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:visibility="gone">
	    
        <TextView android:id="@+id/SnippetLine6"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine7"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
