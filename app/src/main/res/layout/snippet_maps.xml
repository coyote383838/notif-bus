	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine16"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
	    
	    <TextView android:id="@+id/SnippetLine17"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginRight="5dp"/>
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/layoutSnippetDistance" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <TextView android:id="@+id/SnippetName"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
